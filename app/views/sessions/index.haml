%div
  %form{action: '/sessions/create', method: 'POST'}
    = label_tag :username, "Username:"
    = text_field_tag :username
    = label_tag :password, "Password:"
    = password_field_tag :password
    = label_tag :secret, "Secret:"
    = password_field_tag :secret
    = hidden_field_tag :submit, 1
    = submit_tag "Log in"

  %p
    or
  %p= link_to "Sign in with SalesForce.com", "/auth/salesforce" 
